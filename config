# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
        colors   = true
        interval = 5
}

order += "ipv6"
order += "wireless _first_"
order += "cpu_usage"
order += "memory"
order += "disk /"
order += "battery all"
order += "tztime local"

battery all {
        format             = "%status[%percentage]"
        format_down        = "[no bat]"
        last_full_capacity = false
        low_threshold      = 30
        path               = "/sys/class/power_supply/BAT%d/uevent"
        status_bat         = "BAT"
        status_chr         = "CHR"
        status_full        = "FULL"
        status_unk         = "UNK"
        threshold_type     = "time"
}

cpu_usage {
        degraded_threshold              = 25
        format                          = "cpu[%usage] CPU_0[%cpu0] CPU_1[%cpu1]"
        format_above_degraded_threshold = "Warning: ADT[%usage]"
        format_above_threshold          = "Warning: AT[%usage]"
        max_threshold                   = 75
}

disk "/" {
        format                 = "DF[%percentage_free]"
        format_below_threshold = "Warning: [%percentage_avail]"
        low_threshold          = "5"
        threshold_type         = "percentage_free"
}

ipv6 {
        format_down = "[no IPv6]"
        format_up   = "[%ip]"
}

wireless _first_ {
        format_down    = "[no wifi]"
        format_quality = "%3d%s"
        format_up      = "[%essid%quality][%frequency][%bitrate][%ip]"
}

memory {
        decimals           = 1
        format             = "MU[%used] MA[%available]"
        format_degraded    = "MEMLOW[%free]"
        memory_used_method = classical
        threshold_critical = "10%"
        threshold_degraded = "15%"
}

tztime local {
        format = "[%y-%m-%d %H:%M:%S]"
}
